              </tr>
              <% total = total + parseInt(product.product.price)*occurences[i]; %>
              <% i++; %>
              <%}); %>
              <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td><%=total %></td>
              </tr>
              
            </tbody>
          </table>
          <a href="/order/create" class="waves-effect waves-light btn blue">Command</a>
          <%}else{ %>
            <p>Pas de produit</p>
            <%} %>
          </div>
          
        </div>
