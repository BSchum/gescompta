      <% if(typeof products === "object"){ %>
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Item Price</th>
              <th>Quantity</th>
              <th>Total</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            
            <% var i = 0; %>
            <% var total = 0; %>
            
            <% products.forEach(function(product){ %>
              <tr>
                <td><%= product.product.name%></td>
                <td><%= product.product.description %></td>
                <td><%= product.product.price %>â‚¬</td>
